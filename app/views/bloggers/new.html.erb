<h1>Create New Blogger</h1>


<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <p><%= error %></p>
  <% end %>
<% end %>

<%= form_for @blogger do |f| %>
<p><%= f.label :name %>
<%= f.text_field :name %></p>

<p><%= f.label :age %>
<%= f.number_field :age %>
</p>

<p><%= f.label :bio %>
<%= f.text_area :bio %></p>

<%= f.submit %>

<% end %>

<p><%= link_to "All Bloggers", bloggers_path %></p>

