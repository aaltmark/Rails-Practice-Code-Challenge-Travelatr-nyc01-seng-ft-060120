<h1><%= @post.title %></h1>

<h3><%= link_to @post.blogger.name, blogger_path(@post.blogger) %> | <%= link_to @post.destination.name, destination_path(@post.destination) %></h3>

<p>
<%= @post.likes %> <%= "like".pluralize(@post.likes) %>
<br>
<%= button_to "like", like_post_path(@post), method: :patch %>
</p>

<p><%= @post.content_to_string %></p>
